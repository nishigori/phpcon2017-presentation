[
  {
    "name":      "nginx",
    "image":     "${docker_image}:nginx",
    "cpu":       512,
    "memory":    512,
    "essential": true,
    "portMappings": [
      {
        "hostPort": 0,
        "containerPort": 80
      }
    ],
    "links": [
      "php"
    ],
    "volumesFrom": [
      {
        "sourceContainer": "php",
        "readOnly": true
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group":  "${nginx_log_group}",
        "awslogs-region": "${region}"
      }
    }
  },

  {
    "name":      "php",
    "image":     "${docker_image}:php",
    "cpu":       1024,
    "memory":    512,
    "portMappings": [
      {
        "containerPort": 9000
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group":  "${php_log_group}",
        "awslogs-region": "${region}"
      }
    }
  }
]
